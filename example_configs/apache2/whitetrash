<VirtualHost whitetrash:443>
SSLEngine on
SSLCertificateFile /etc/apache2/ssl/server.crt
SSLCertificateKeyFile /etc/apache2/ssl/server.key
ServerName whitetrash
SSLCipherSuite HIGH:MEDIUM
</VirtualHost>

DocumentRoot /var/www/
Alias /media "/var/www/whitetrash/media"
MaxRequestsPerChild 1

<Location "/">
SetHandler mod_python
PythonHandler django.core.handlers.modpython
PythonPath "['/home/greg/whitetrash/django_site/'] + sys.path"
SetEnv DJANGO_SETTINGS_MODULE whitetrash.settings
PythonDebug On

RewriteEngine On
RewriteCond %{HTTPS} off
#Don't want to rewrite CONNECT, because it will break ssl whitelisting
RewriteCond %{REQUEST_METHOD} GET
RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI}

</Location>

<Location "/media">
    SetHandler None
</Location>

<LocationMatch "\.(jpg|gif|png|css)$">
    SetHandler None
</LocationMatch>

